<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cancel_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="2dp"
        android:layout_weight="0"
        android:text="@string/cancel"
        android:textColor="#ffffff"
        android:clickable="true"
        android:visibility="gone"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:padding="5dp">

        <EditText
            android:id="@+id/search_file_et"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_edittext_shape"
            android:hint="@string/search"
            android:lineHeight="8dp"
            android:maxHeight="25dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/search_file_image_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/search_file_et"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/search" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/transmission_list_image_btn"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="center|right"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0"
        android:src="@drawable/transmission_list_icon" />

    <ImageView
        android:id="@+id/add_image_btn"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="center|right"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0"
        android:src="@drawable/add" />

</LinearLayout>